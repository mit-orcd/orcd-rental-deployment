# =============================================================================
# ColdFront Application Nginx Configuration
# =============================================================================
# Generated by Ansible - nginx_app role
# Domain: {{ domain_name }}
# Socket: {{ app_socket }}
# Static: {{ static_root }}
#
# Note: Catch-all default_server blocks are managed by nginx_base role
# (catchall-https.conf). Do not add default_server here to avoid conflicts.
# =============================================================================

# =============================================================================
# Main Application Configuration
# =============================================================================

# HTTP -> HTTPS redirect
server {
    listen 80;
    listen [::]:80;
    server_name {{ domain_name }};

    # ACME challenge for renewal
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ domain_name }};

    ssl_certificate     {{ ssl_fullchain }};
    ssl_certificate_key {{ ssl_privkey }};

    # Basic security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    client_max_body_size 50M;

    # Static files
    location /static/ {
        alias {{ static_root }}/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Proxy to Gunicorn
    location / {
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout {{ proxy_read_timeout }};
        proxy_connect_timeout {{ proxy_connect_timeout }};
        proxy_send_timeout {{ proxy_send_timeout }};
        proxy_pass http://unix:{{ app_socket }};
    }

    # Health endpoint
    location /health {
        access_log off;
        return 200 "OK\n";
        add_header Content-Type text/plain;
    }
}
